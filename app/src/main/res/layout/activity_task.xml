<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thousandfeeds.studytimer.TaskActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.thousandfeeds.studytimer.fragments.TodoFragment"
        android:layout_width="0dp"
        android:layout_height="262dp"
        android:layout_marginTop="222dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="143dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/taskTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ToDoTiTle" />

        <TextView
            android:id="@+id/taskDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ToDoDuration" />

        <EditText
            android:id="@+id/enterToDoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EnterTodo"
            android:padding="5dp" />

        <Button
            android:id="@+id/insertToDoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Insert"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
